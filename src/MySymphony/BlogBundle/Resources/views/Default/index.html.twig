{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
<div	class="row">
	{% for post in posts %}
	<div class="well well-{{post.getId()}}">
	<h1>
	<small class="pull-right">{{post.getCreatedAt()| date('d M, Y')}}</small>
	{{post.getTitle()| capitalize}}</h1>
	<p>{{post.getDescription()}}</p>
	<p>
	<a href="{{path('my_symphony_blog_delete',{'id':post.getId()})}}" data-id='{{post.getId()}}' class="btn btn-xs btn-primary remove-btn">Remove</a>
	</p>
	</div>
	{% endfor  %}

	<div class="well">
	<a href="{{path('my_symphony_blog_new')}}" class="btn btn-sm btn-primary">Create new Post</a>
	</div>
</div>
</div>
{% endblock %}
